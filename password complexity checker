  <title>Password Complexity Checker</title>
  <style>
    body {
      background-color: #0f0f0f;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #00ffff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    h1 {
      color: #0ff;
      text-shadow: 0 0 10px #0ff;
    }

    input[type="password"] {
      padding: 10px;
      font-size: 16px;
      border: none;
      outline: none;
      width: 300px;
      margin: 10px 0;
      border-radius: 5px;
      background-color: #1a1a1a;
      color: #fff;
      box-shadow: 0 0 10px #00ffff88;
    }

    .feedback {
      margin-top: 10px;
      font-weight: bold;
      text-shadow: 0 0 5px #00ffff;
    }

    .strength-bar {
      height: 10px;
      width: 300px;
      background: #333;
      border-radius: 5px;
      overflow: hidden;
      margin-top: 10px;
    }

    .bar-fill {
      height: 100%;
      transition: width 0.3s ease;
    }

    .weak {
      width: 33%;
      background: red;
      box-shadow: 0 0 10px red;
    }

    .medium {
      width: 66%;
      background: orange;
      box-shadow: 0 0 10px orange;
    }

    .strong {
      width: 100%;
      background: lime;
      box-shadow: 0 0 10px lime;
    }
  </style>
